{
  "testEnvironment": "node",
  "testMatch": [
    "**/test/**/*.test.js"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/\\.homeybuild/"
  ],
  "collectCoverageFrom": [
    "drivers/**/*.js",
    "lib/**/*.js",
    "!**/node_modules/**",
    "!**/test/**"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/\\.homeybuild/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  }
}
